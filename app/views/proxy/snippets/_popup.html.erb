<style><%= render 'popup.css' %></style>
<style>
  #main-joltify-popup {
    background-color: <%= @wheel.popup_background_color %>;
  }

  .joltify-tab-link {
    z-index: 999996;
    position: fixed;
    left: 0;
    top: 50vh;
    border-radius: 0px 50px 50px 0px;
    padding: 25px;
    background-color: <%= @wheel.popup_background_color %>;
    color: red;
    -webkit-box-shadow: 6px 0px 20px -5px rgba(0,0,0,0.68);
    -moz-box-shadow: 6px 0px 20px -5px rgba(0,0,0,0.68);
    box-shadow: 6px 0px 20px -5px rgba(0,0,0,0.68);
  }

  .joltify-tab-icon {
    color: <%= @wheel.popup_font_color %>;
  }

  .joltify-tab-icon:hover {
    animation: shake 0.82s cubic-bezier(.36,.07,.19,.97) infinite;
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
    perspective: 1000px;
  }

  @keyframes shake {
  10%, 90% {
    transform: rotate(-3deg);
  }
  
  20%, 80% {
    transform: rotate(6deg);
  }

  30%, 50%, 70% {
    transform: rotate(-9deg);
  }

  40%, 60% {
    transform: rotate(9deg);
  }
}

</style>

<div id="joltify-popup-background"></div>

<iframe id="main-joltify-popup" src="<%= proxy_shop_frame_path %>" frameBorder="0"></iframe>

