(() => {
  console.log('Loaded snippet');

  function openPopup() {
    document.getElementById('main-howdyfox-popup').classList.add('open');
    document.getElementById('howdyfox-popup-background').classList.add('open');

    document.body.style.overflow = 'hidden';
  }

  function closePopup() {
    document.getElementById('main-howdyfox-popup').classList.remove('open');
    document.getElementById('howdyfox-popup-background').classList.remove('open');
    document.body.style.overflow = 'visible';
    document.getElementById('howdyfox-popup-tab').style.display = 'none';
  }

  function checkPreviewMode() {
    const urlParams = new URLSearchParams(window.location.search);
    const isPreview = urlParams.get('howdyfox_preview') === 'true';
    return isPreview;
  }

  if (window.addEventListener) {
    window.addEventListener("message", onHowdyFoxMessage, false);
  }

  else if (window.attachEvent) {
    window.attachEvent("onmessage", onHowdyFoxMessage, false);
  }

  function onHowdyFoxMessage(event) {
    if (event.data.message === 'OPEN_POPUP') {
      openPopup();
    }

    if (event.data.message === 'CLOSE_POPUP') {
      closePopup();
    }
  }

  const live = <%= @wheel.live? %>;
  const preview = checkPreviewMode();
  if (!live && !preview) return;

  const popup = document.createElement('div');
  popup.innerHTML = `<%= render 'popup' %>`;
  popup.innerHTML = popup.innerHTML.replace('howdyfox_preview=false', `howdyfox_preview=${preview}`);
  document.body.insertBefore(popup, document.body.firstChild);
})();
