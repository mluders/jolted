#howdyfox-popup-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: none;
  background-color: none;
  z-index: 999997; /* Sit on top */
  transition: all 2s ease-in-out; /*make it smooth*/
}

#howdyfox-popup-background.open {
  display: block;
  background-color: rgb(0,0,0,0.7);
}

#main-howdyfox-popup {
  height: 100%;
  width: 100%;
  top: 0;
  left: -100%;
  position: fixed;
  z-index: 999998;
  background-color: <%= @wheel.popup_background_color %>;
  overflow-x: hidden;
  transition: all .35s ease-in-out;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
}

<% if @wheel.background_image_url.present? %>
  #main-howdyfox-popup {
    background-size: cover;
    background-position: center;
    background-image: url('<%= @wheel.background_image_url %>');
  }
<% end %>

#main-howdyfox-popup.open {
  left: 0;
  -webkit-box-shadow: 6px 0px 20px -5px rgba(0,0,0,0.68);
  -moz-box-shadow: 6px 0px 20px -5px rgba(0,0,0,0.68);
  box-shadow: 6px 0px 20px -5px rgba(0,0,0,0.68);
}

@media (min-width: 1024px) {
  #main-howdyfox-popup {
    width: 75%;
    left: -75%;
  }
}

.howdyfox-tab-link {
  z-index: 999996;
  position: fixed;
  left: 0;
  top: 50vh;
  border-radius: 0px 50px 50px 0px;
  padding: 25px;
  background-color: <%= @wheel.popup_background_color %>;
  color: red;
  -webkit-box-shadow: 6px 0px 20px -5px rgba(0,0,0,0.68);
  -moz-box-shadow: 6px 0px 20px -5px rgba(0,0,0,0.68);
  box-shadow: 6px 0px 20px -5px rgba(0,0,0,0.68);
}

.howdyfox-tab-icon {
  color: <%= @wheel.popup_font_color %>;
}

.howdyfox-tab-link:hover > .howdyfox-tab-icon {
  animation: shake 0.82s cubic-bezier(.36,.07,.19,.97) infinite;
  transform: translate3d(0, 0, 0);
  backface-visibility: hidden;
  perspective: 1000px;
}

@keyframes shake {
  10%, 90% {
    transform: rotate(-3deg);
  }

  20%, 80% {
    transform: rotate(6deg);
  }

  30%, 50%, 70% {
    transform: rotate(-9deg);
  }

  40%, 60% {
    transform: rotate(9deg);
  }
}

